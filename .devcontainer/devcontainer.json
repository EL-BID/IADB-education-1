{
    "name": "Run in a remote container",
    "image":"mcr.microsoft.com/devcontainers/universal:2",

    "features": {

    },

    "customizations": {
        "codespaces": {
          "openFiles": [
            "para_model.ipynb"
          ]
        },
        "vscode": {
          "extensions": [
            "ms-python.python",
            "ms-python.isort",
            "ms-toolsai.jupyter",
            "ms-toolsai.vscode-jupyter-cell-tags",
            "ms-toolsai.jupyter-keymap",
            "ms-toolsai.jupyter-renderers",
            "ms-toolsai.vscode-jupyter-slideshow",
            "ms-python.vscode-pylance"
          ]
        }
      },

      // intall required packages that are not contained in the universal image and run setup script
      "postCreateCommand": "sudo pip install urbanpy ipywidgets geopandas shapely osmnx tqdm pandarallel contextily && ./script.sh",

      "hostRequirements": {
        "cpus": 8,
        "memory": "16gb",
        "storage": "32gb"
     }
}